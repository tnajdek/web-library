{
  "name": "zotero-web-library",
  "version": "1.6.0",
  "description": "Web library from zotero.org",
  "main": "src/js/zotero-web-library.js",
  "files": [
    "src/js",
    "src/scss",
    "build"
  ],
  "type": "module",
  "browserslist": "firefox >= 68, chrome >= 67, edge >= 79, safari >= 11, last 2 versions, not dead, not ie 11, not ie 10",
  "scripts": {
    "serve": "node scripts/server.mjs",
    "prepack": "run-s clean build",
    "postpack": "rimraf build",
    "prebuild": "npm run clean -s && mkdir -p build/static/web-library/",
    "clean": "rimraf build",
    "clean:data": "rimraf data",
    "clean:static": "rimraf tmp src/static/fonts src/static/note-editor src/static/pdf-reader src/static/pdf-worker src/static/citeproc.js",
    "clean:all": "run-p clean clean:data clean:static",
    "purge:submodules": "rimraf modules && git submodule update --init --recursive",
    "build": "NODE_ENV=production npm run build:prepare && NODE_ENV=production npm run build:all && npm run build:postprocess",
    "build:tests": "NODE_ENV=testing run-s \"build:prepare\" \"build:all\" \"build:postprocess\" \"build:layout-only-css\"",
    "build:all": "run-p 'build:js -s' 'build:scss -s' 'build:html -s' 'build:static -s'",
    "build:js": "mkdir -p build/static/web-library && rollup -c",
    "build:scss": "for f in src/scss/*.scss; do sass --no-source-map $f build/static/web-library/`basename $f .scss`.css; done;",
    "build:html": "mkdir -p build/ && rsync -vazL src/html/* build/",
    "build:styles-json": "node scripts/build-styles-json.mjs",
    "build:fetch-or-build-modules": "node scripts/fetch-or-build-modules.mjs",
    "build:fonts": "node scripts/fetch-fonts.mjs",
    "build:locale": "node scripts/collect-locale.mjs",
    "build:date-formats": "node scripts/fetch-date-formats.mjs",
    "build:version": "node scripts/store-version.mjs",
    "build:static": "mkdir -p build/static/web-library/ && rsync -vazL src/static/* build/static/web-library/",
    "build:postprocess": "postcss build/static/web-library/zotero-web-library.css --use autoprefixer --no-map -r",
    "build:check-icons": "node scripts/check-icons.mjs",
    "build:citeproc-js": "node scripts/prepare-citeproc-js.mjs",
    "build:prepare": "run-p \"build:version\" \"build:locale\" \"build:date-formats\" \"build:fetch-or-build-modules\" \"build:fonts\" \"build:styles-json\" \"build:check-icons\" \"build:citeproc-js\"",
    "build:layout-only-css": "node scripts/build-layout-only-css.mjs",
    "devel": "run-p 'devel:js -s' 'devel:scss -s' 'devel:html -s' 'devel:static -s'",
    "devel:js": "rollup -c -w",
    "devel:scss": "nodemon -q -w src/scss --ext 'scss' --exec 'npm run devbuild:scss'",
    "devel:html": "nodemon -q -w src/html -w config --ext '.' --exec 'npm run build:html'",
    "devel:static": "nodemon -q -w src/static --ext '.' --exec 'npm run build:static'",
    "devbuild:scss": "run-s devbuild:scss:build devbuild:scss:post",
    "devbuild:scss:build": "for f in src/scss/*.scss; do sass --embed-source-map $f build/static/web-library/`basename $f .scss`.css; done;",
    "devbuild:scss:post": "postcss build/static/web-library/*.css --use autoprefixer -r",
    "start:all": "run-p \"serve -s {@}\" \"devel -s {@}\"",
    "start": "run-s \"build:prepare\" \"start:all\"",
    "stylelint": "stylelint \"src/scss/**/*.scss\"",
    "eslint": "eslint \"src/js/**/*.+(js|jsx)\" || true",
    "lint": "run-p stylelint eslint",
    "watch:stylelint": "nodemon -q -w src/scss --ext 'scss' --exec 'npm run stylelint'",
    "watch:eslint": "nodemon -q -w src/js --ext 'js,jsx' --exec 'npm run eslint'",
    "watch:lint": "run-p 'watch:stylelint -s' 'watch:eslint -s'",
    "jest:watch": "jest --watch",
    "test": "run-s \"build:tests\" \"test:all\"",
    "test:all": "concurrently --group --prefixColors auto --prefix '[{name}]' -n JEST,PLAYWRIGHT \"npm:test:jest\" \"npm:test:playwright\"",
    "test:jest": "jest --silent",
    "test:playwright": "playwright test",
    "test:update-snapshots": "playwright test --update-snapshots",
    "test:update-snapshots-linux": "docker run --rm -it -v \"$PWD:/work\" -w /work mcr.microsoft.com/playwright:v1.55.0-jammy bash -lc \"npm ci && npx playwright install --with-deps && npx playwright test --update-snapshots\"",
    "fixed-state-server": "node scripts/fixed-state-server.mjs",
    "add-license": "node scripts/add-license.mjs",
    "compile-zotero-icons": "node scripts/compile-zotero-icons.mjs"
  },
  "keywords": [
    "Zotero"
  ],
  "license": "AGPL-3.0",
  "dependencies": {
    "@babel/runtime": "^7.28.4",
    "@babel/runtime-corejs3": "^7.28.4",
    "@floating-ui/react-dom": "^2.1.6",
    "@reduxjs/toolkit": "^2.9.0",
    "@tnajdek/react-window": "^2.1.1",
    "classnames": "^2.5.1",
    "copy-to-clipboard": "^3.3.3",
    "core-js": "^3.45.1",
    "deep-equal": "^2.2.3",
    "file-saver": "^2.0.5",
    "memoize-one": "^6.0.0",
    "path-to-regex": "^1.3.8",
    "prop-types": "^15.8.1",
    "rdndmb-html5-to-touch": "^9.0.0",
    "react": "^19.1.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dnd-multi-backend": "^9.0.0",
    "react-dnd-touch-backend": "^16.0.1",
    "react-dom": "^19.1.1",
    "react-modal": "^3.16.3",
    "react-redux": "^9.2.0",
    "react-transition-group": "^4.4.5",
    "react-virtualized-auto-sizer": "^1.0.26",
    "react-window-infinite-loader": "^2.0.0",
    "redux": "^5.0.1",
    "redux-async-queue": "^1.0.0",
    "redux-thunk": "^3.1.0",
    "use-debounce": "^10.0.6",
    "zotero-api-client": "^0.47.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/eslint-parser": "^7.28.4",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-syntax-import-attributes": "^7.27.1",
    "@babel/plugin-transform-async-to-generator": "^7.27.1",
    "@babel/plugin-transform-runtime": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@playwright/test": "^1.55.1",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-virtual": "^3.0.2",
    "@rollup/plugin-wasm": "^6.2.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@welldone-software/why-did-you-render": "^10.0.1",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.1.2",
    "babel-plugin-add-module-exports": "^1.0.4",
    "babel-plugin-transform-import-meta": "^2.3.3",
    "chai": "^6.0.1",
    "citeproc": "^2.4.63",
    "concurrently": "^9.2.1",
    "cssom": "^0.5.0",
    "eslint": "9.36.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "glob": "^11.0.3",
    "globals": "^16.4.0",
    "http-proxy": "^1.18.1",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "load-script": "^2.0.0",
    "mocha": "^11.7.2",
    "msw": "^2.11.3",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "nyc": "^17.1.0",
    "pixelmatch": "^7.1.0",
    "playwright": "^1.55.1",
    "pngjs": "^7.0.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "ps-tree": "^1.2.0",
    "react-test-renderer": "^19.1.1",
    "redux-mock-store": "^1.5.5",
    "rimraf": "^6.0.1",
    "rollup": "^4.52.2",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-sizes": "^1.1.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "rollup-plugin-web-worker-loader": "^1.7.0",
    "run-sequence": "^2.2.1",
    "sass": "^1.93.2",
    "serve-static": "^2.2.0",
    "stylelint": "^16.24.0",
    "stylelint-config-recommended-scss": "^16.0.1",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.12.1",
    "terser": "^5.44.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  }
}
