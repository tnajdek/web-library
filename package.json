{
  "name": "zotero-web-library",
  "version": "0.10.0",
  "description": "Web library from zotero.org",
  "main": "src/js/zotero-web-library.js",
  "files": [
    "src/js",
    "src/scss",
    "build"
  ],
  "config": {
    "port": "8001",
    "styles_cache_time": "86400000",
    "locale_cache_time": "86400000"
  },
  "browserslist": "last 2 versions",
  "scripts": {
    "serve": "node scripts/server.js -p $npm_package_config_port",
    "prepack": "run-s clean build",
    "postpack": "rimraf build",
    "prebuild": "npm run clean -s && mkdir -p build/static/",
    "clean": "rimraf build",
    "build": "run-p 'build:js -s' 'build:scss -s' 'build:html -s' 'build:static -s' && npm run build:postprocess",
    "browserify": "mkdir -p build/static && NODE_ENV=production browserify -s ZoteroWebLibrary --extension=.jsx src/js/main.js -t [babelify] -g [ envify --NODE_ENV production ] -g uglifyify | terser --compress --mangle > build/static/zotero-web-library.js",
    "build:js": "run-s browserify",
    "build:scss": "for f in src/scss/*.scss; do node-sass $f --output-style compressed --output build/static/; done;",
    "build:html": "mkdir -p build/ && rsync -vazL src/html/* build/",
    "build:styles-json": "node scripts/build-styles-json.js --stylesCacheTime $npm_package_config_styles_cache_time",
    "build:locale": "node scripts/fetch-locale.js --stylesCacheTime $npm_package_config_locale_cache_time",
    "build:static": "mkdir -p build/static && rsync -vazL src/static/* build/static/",
    "build:postprocess": "postcss build/static/zotero-web-library.css --use autoprefixer --no-map -r",
    "devel": "run-p 'devel:js -s' 'devel:scss -s' 'devel:html -s' 'devel:static -s'",
    "devel:js": "watchify -s ZoteroWebLibrary --extension=.jsx src/js/main.js -d -v -t [babelify] -p mapstraction -o build/static/zotero-web-library.js",
    "devel:scss": "nodemon -q -w src/scss --ext 'scss' --exec 'npm run devbuild:scss'",
    "devel:html": "nodemon -q -w src/html -w config --ext '.' --exec 'npm run build:html'",
    "devel:static": "nodemon -q -w src/static --ext '.' --exec 'npm run build:static'",
    "devbuild:scss": "run-s devbuild:scss:build devbuild:scss:post",
    "devbuild:scss:build": "for f in src/scss/*.scss; do node-sass $f --recursive --source-map true --source-map-contents true --output build/static; done;",
    "devbuild:scss:post": "postcss build/static/*.css --use autoprefixer -r",
    "start": "run-p \"build:styles-json\" \"build:locale\" \"serve -s {@}\" \"devel -s {@}\"",
    "stylelint": "stylelint src/scss/**/*.scss || true",
    "eslint": "eslint \"src/js/**/*.+(js|jsx)\" || true",
    "lint": "run-p stylelint eslint",
    "watch:stylelint": "nodemon -q -w src/scss --ext 'scss' --exec 'npm run stylelint'",
    "watch:eslint": "nodemon -q -w src/js --ext 'js,jsx' --exec 'npm run eslint'",
    "watch:lint": "run-p 'watch:stylelint -s' 'watch:eslint -s'",
    "test": "nyc mocha 'test/**/*.spec.+(js|jsx)'"
  },
  "keywords": [
    "Zotero"
  ],
  "author": "Faolan C-P",
  "license": "AGPL-3.0",
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "dependencies": {
    "babel-regenerator-runtime": "^6.5.0",
    "bootstrap-sass": "^3.4.1",
    "classnames": "^2.2.6",
    "connected-react-router": "^6.3.1",
    "copy-to-clipboard": "^3.0.8",
    "deep-equal": "^1.0.1",
    "escape-html": "^1.0.3",
    "file-saver": "^2.0.0",
    "history": "^4.7.2",
    "hoist-non-react-statics": "^3.3.0",
    "memoize-one": "^5.0.0",
    "moment": "^2.24.0",
    "param-case": "^2.1.1",
    "prop-types": "^15.7.1",
    "react": "^16.8.1",
    "react-debounce-input": "^3.2.0",
    "react-dnd": "^7.3.2",
    "react-dnd-html5-backend": "^7.2.0",
    "react-dnd-multi-backend": "^3.1.11",
    "react-dnd-touch-backend": "^0.8.1",
    "react-dom": "^16.8.1",
    "react-key-handler": "^1.2.0-beta.3",
    "react-modal": "^3.6.1",
    "react-redux": "^6.0.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-select": "<2.0.0",
    "react-tinymce": "^0.7.0",
    "react-transition-group": "^2.5.3",
    "react-virtualized": "^9.21.0",
    "reactstrap": "^7.1.0",
    "redux": "^4.0.1",
    "redux-async-queue": "^1.0.0",
    "redux-promise": "^0.6.0",
    "redux-thunk": "^2.3.0",
    "tinymce": "<5.0.0",
    "webworkify": "^1.5.0",
    "zotero-api-client": "^0.23.0",
    "zotero-api-client-cache": "^0.7.0",
    "zotero-base-mappings": "0.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-function-sent": "^7.1.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-proposal-numeric-separator": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/plugin-proposal-throw-expressions": "^7.0.0",
    "@babel/plugin-syntax-async-generators": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/plugin-transform-async-to-generator": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.4.7",
    "babel-eslint": "^10.0.1",
    "babel-plugin-add-module-exports": "^1.0.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "chai": "^4.2.0",
    "envify": "^4.1.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "eslint": "^5.13.0",
    "eslint-plugin-react": "^7.12.4",
    "fetch-mock": "^7.3.0",
    "mapstraction": "^1.0.1",
    "merge-stream": "^1.0.1",
    "mocha": "^5.2.0",
    "node-eval": "^2.0.0",
    "node-sass": "^4.10.0",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.3.0",
    "postcss-cli": "^6.1.1",
    "react-test-renderer": "^16.8.1",
    "redux-mock-store": "^1.5.3",
    "rimraf": "^2.6.3",
    "rollup": "^1.7.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-bundle-worker": "^0.1.0",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-replace": "^2.1.1",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-uglify": "^6.0.2",
    "rollup-plugin-webworkify": "0.0.4",
    "run-sequence": "^2.2.1",
    "serve-static": "^1.13.2",
    "sinon": "^7.2.3",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.5.3",
    "terser": "^3.16.1",
    "uglifyify": "^5.0.1",
    "watchify": "^3.11.1"
  }
}
